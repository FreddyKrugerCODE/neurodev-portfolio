---
// src/layouts/Layout.astro
import '../styles/global.css';
const { title, description } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | NeuroDev AI</title>
    <meta name="description" content={description} />
</head>
<body class="bg-[#030303] text-slate-300 font-sans selection:bg-blue-500/30">
    <nav class="fixed top-0 w-full z-50 border-b border-white/5 bg-black/60 backdrop-blur-2xl">
        <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
            <a href="/" class="text-xl font-black text-white tracking-tighter">NEURO<span class="text-blue-500">DEV</span></a>
            <div class="hidden md:flex gap-8 text-sm font-semibold uppercase tracking-widest">
                <a href="/magento" class="hover:text-blue-400 transition">Magento 2</a>
                <a href="/ai-solutions" class="hover:text-blue-400 transition">AI Logic</a>
                <a href="/#contact" class="bg-blue-600 text-white px-5 py-2 rounded-full hover:bg-blue-500 transition">Get Started</a>
            </div>
        </div>
    </nav>
    <slot />
    <footer class="py-20 border-t border-white/5 text-center text-xs text-slate-600 uppercase tracking-[0.3em]">
        &copy; 2025 NeuroDev AI â€¢ Engineering Digital Growth
    </footer>
</body>
</html>