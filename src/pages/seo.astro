---
// NeuroDev AI - Technical SEO Silo
// Optimized for Search Dominance and Architecture Authority
import Layout from '../layouts/Layout.astro';

const auditProcess = [
  {
    title: "Semantic Architecture",
    desc: "We refactor DOM structures to ensure absolute clarity for crawlers. Proper header hierarchy, schema nesting, and WAI-ARIA compliance.",
    icon: "layers"
  },
  {
    title: "Core Web Vitals",
    desc: "Aggressive optimization for LCP, FID, and CLS. We aim for 95+ scores on mobile across the entire catalog, not just the homepage.",
    icon: "zap"
  },
  {
    title: "Indexing Logic",
    desc: "Strategic robots.txt, sitemap orchestration, and canonical mapping to ensure only high-value revenue pages consume crawl budget.",
    icon: "search"
  },
  {
    title: "E-E-A-T Signaling",
    desc: "Building technical trust through structured data, authorship linking, and secure protocol hardening (HTTPS/TLS/HSTS).",
    icon: "shield"
  }
];

// Page-Specific Schema: Technical SEO Service
const seoServiceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Technical SEO Audit",
  "provider": {
    "@type": "ProfessionalService",
    "name": "NeuroDev AI"
  },
  "areaServed": "Global",
  "description": "Enterprise-grade technical SEO audits focusing on site speed, semantic architecture, and search dominance for e-commerce."
};
---

<Layout 
	title="Technical SEO Dominance | E-commerce Search Architecture Specialists" 
	description="Dominate search results with data-led technical SEO. Specialized in Core Web Vitals optimization, semantic architecture, and enterprise search strategy."
	additionalSchema={seoServiceSchema}
>
	<!-- Background Orbs -->
	<div class="fixed inset-0 -z-10 pointer-events-none">
		<div class="absolute top-[-20%] left-[-10%] w-[60%] h-[60%] bg-blue-900/10 blur-[180px] rounded-full animate-pulse"></div>
		<div class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] bg-indigo-900/10 blur-[150px] rounded-full"></div>
	</div>

	<!-- Hero Section -->
	<header class="pt-48 pb-32 px-6 max-w-7xl mx-auto">
		<div class="reveal inline-block px-3 py-1 mb-8 text-[10px] font-bold tracking-[0.2em] text-blue-500 uppercase bg-blue-500/10 border border-blue-500/20 rounded-full">
			Audit Focus: Technical & Semantic Logic
		</div>
		<h1 class="reveal text-5xl md:text-8xl font-black text-white leading-[0.9] mb-12 tracking-tighter">
			DOMINATE <br/> <span class="text-slate-400 italic font-light">TECHNICAL</span> <br/> SEARCH.
		</h1>
		<p class="reveal text-xl md:text-2xl text-slate-300 max-w-2xl leading-relaxed font-medium">
			SEO is no longer about keywords. It's about <span class="text-white">site speed, semantic hierarchy,</span> and technical trust. We audit the architecture to secure your rank.
		</p>
	</header>

	<!-- Capabilities Grid (Audit Process) -->
	<section class="py-32 px-6 bg-white/[0.01] border-y border-white/5">
		<div class="max-w-7xl mx-auto">
			<div class="grid md:grid-cols-2 gap-12">
				{auditProcess.map((item) => (
					<div class="reveal glass p-12 rounded-[2.5rem] hover:border-blue-500/30 transition-all group">
						<div class="w-12 h-12 bg-blue-600/10 border border-blue-500/20 rounded-xl flex items-center justify-center mb-8 group-hover:scale-110 transition-transform">
							{item.icon === "layers" && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#2563eb" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-label="Layers icon representing semantic architecture"><polygon points="12 2 2 7 12 12 22 7 12 2"/><polyline points="2 17 12 22 22 17"/><polyline points="2 12 12 17 22 12"/></svg>}
							{item.icon === "zap" && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#2563eb" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-label="Lightning bolt icon representing Core Web Vitals speed"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg>}
							{item.icon === "search" && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#2563eb" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-label="Search icon representing indexing logic"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>}
							{item.icon === "shield" && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#2563eb" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-label="Shield icon representing E-E-A-T trust signals"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>}
						</div>
						<h2 class="text-3xl font-bold text-white mb-6 uppercase tracking-tight">{item.title}</h2>
						<p class="text-slate-300 leading-relaxed text-lg">{item.desc}</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Final CTA -->
	<section class="py-40 px-6 text-center border-t border-white/5">
		<div class="max-w-4xl mx-auto flex flex-col items-center">
			<h2 class="reveal text-6xl md:text-9xl font-black text-white tracking-tighter mb-12 uppercase leading-none">Audit <br/> <span class="text-blue-500">First.</span></h2>
			<p class="reveal text-slate-400 text-xl mb-12">Stop guessing. Get a technical blueprint for your search dominance.</p>
			
			<a href="/contact" class="reveal px-10 py-5 bg-blue-600 text-white font-bold rounded-2xl hover:bg-blue-500 transition-all flex items-center gap-3 group shadow-lg shadow-blue-900/20 uppercase tracking-widest text-sm" aria-label="Navigate to contact form for SEO audit request">
				Start SEO Mission
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform" aria-hidden="true"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
			</a>
		</div>
	</section>
</Layout>
