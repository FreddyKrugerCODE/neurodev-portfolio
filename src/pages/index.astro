---
// NeuroDev AI - Flagship Page (Astro Edition)
// High-performance, SEO-optimized, and built for 2025 growth.

const faqData = [
  {
    q: "How does AI integration work with Magento?",
    a: "We implement custom middleware that connects your Magento backend to Large Language Models. This allows for automated product descriptions, intelligent search, and neural customer support agents that understand your specific catalog."
  },
  {
    q: "What is your typical optimization timeline?",
    a: "A technical audit takes 7 days. Speed and Core Vital optimizations usually see significant results within 2-3 weeks of implementation, depending on the current state of the architecture."
  },
  {
    q: "Do you handle custom Magento module development?",
    a: "Yes. We specialize in high-complexity modules that standard agencies avoid, specifically focusing on ERP integrations, custom checkout logic, and proprietary inventory management systems."
  }
];

const arsenal = [
  { label: "Adobe Commerce", category: "Platform" },
  { label: "React / Next.js", category: "Frontend" },
  { label: "Python / PyTorch", category: "AI Ops" },
  { label: "Elasticsearch", category: "Infrastructure" },
  { label: "PostgreSQL", category: "Database" },
  { label: "Docker / K8s", category: "Deployment" },
  { label: "Google Search Console", category: "SEO" },
  { label: "Tailwind CSS", category: "Styling" }
];
---

<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>NeuroDev AI | Strategic Magento & Neural Engineering</title>
		<meta name="description" content="Specialized Magento 2 engineering, custom AI agents, and technical SEO dominance." />
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,200;1,800&display=swap" rel="stylesheet">

		<style>
			@import "tailwindcss";

			@theme {
				--color-brand-bg: #020202;
				--color-brand-blue: #2563eb;
			}

			:root {
				color-scheme: dark;
			}

			body {
				font-family: 'Plus Jakarta Sans', sans-serif;
				background-color: var(--color-brand-bg);
				letter-spacing: -0.02em;
			}

			.glass {
				background: rgba(15, 15, 15, 0.6);
				backdrop-filter: blur(20px);
				border: 1px solid rgba(255, 255, 255, 0.05);
			}

			.text-glow {
				text-shadow: 0 0 30px rgba(37, 99, 235, 0.3);
			}

			.neural-grid {
				background-image: radial-gradient(rgba(37, 99, 235, 0.1) 1px, transparent 1px);
				background-size: 30px 30px;
			}

			.reveal {
				opacity: 0;
				transform: translateY(30px);
				transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
			}

			.reveal.active {
				opacity: 1;
				transform: translateY(0);
			}

			.code-scroller {
				mask-image: linear-gradient(to bottom, transparent, black 20%, black 80%, transparent);
			}

			h1, h2, h3, .font-black {
				letter-spacing: -0.05em;
			}
		</style>
	</head>
	<body class="text-slate-300 selection:bg-blue-600/30 overflow-x-hidden">
		
		<!-- Background Orbs -->
		<div class="fixed inset-0 -z-10 pointer-events-none">
			<div class="absolute top-[-10%] left-[-10%] w-[50%] h-[50%] bg-blue-900/20 blur-[150px] rounded-full animate-pulse"></div>
			<div class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] bg-indigo-900/10 blur-[150px] rounded-full"></div>
		</div>

		<!-- Navigation -->
		<nav id="navbar" class="fixed top-0 w-full z-50 transition-all duration-700 border-b border-transparent py-8">
			<div class="max-w-7xl mx-auto px-6 flex justify-between items-center">
				<div class="flex items-center gap-2 group cursor-pointer">
					<div class="w-8 h-8 bg-blue-600 rounded flex items-center justify-center group-hover:rotate-12 transition-transform">
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white"><rect x="4" y="4" width="16" height="16" rx="2" ry="2"></rect><rect x="9" y="9" width="6" height="6"></rect><line x1="9" y1="1" x2="9" y2="4"></line><line x1="15" y1="1" x2="15" y2="4"></line><line x1="9" y1="20" x2="9" y2="23"></line><line x1="15" y1="20" x2="15" y2="23"></line><line x1="20" y1="9" x2="23" y2="9"></line><line x1="20" y1="15" x2="23" y2="15"></line><line x1="1" y1="9" x2="4" y2="9"></line><line x1="1" y1="15" x2="4" y2="15"></line></svg>
					</div>
					<span class="text-xl font-black text-white tracking-tighter uppercase">
						Neuro<span class="text-blue-500">Dev</span>
					</span>
				</div>
				<div class="hidden md:flex gap-10 items-center">
					<a href="#services" class="text-[11px] font-bold uppercase tracking-[0.3em] text-slate-400 hover:text-white transition-colors">Services</a>
					<a href="#methodology" class="text-[11px] font-bold uppercase tracking-[0.3em] text-slate-400 hover:text-white transition-colors">Methodology</a>
					<a href="#results" class="text-[11px] font-bold uppercase tracking-[0.3em] text-slate-400 hover:text-white transition-colors">Results</a>
					<a href="mailto:contact@neurodevai.com" class="px-6 py-2.5 bg-white text-black text-[11px] font-bold uppercase tracking-[0.2em] rounded-full hover:bg-blue-600 hover:text-white transition-all duration-300">Initialize</a>
				</div>
			</div>
		</nav>

		<!-- Hero Section -->
		<header class="relative pt-44 pb-20 px-6 max-w-7xl mx-auto min-h-[90vh] flex flex-col justify-center">
			<div class="reveal inline-flex items-center gap-2 px-3 py-1 mb-8 text-[10px] font-bold tracking-[0.2em] text-blue-500 uppercase bg-blue-500/10 border border-blue-500/20 rounded-full">
				<span class="relative flex h-2 w-2">
					<span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
					<span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"></span>
				</span>
				Neural Ops: 2025 Edition
			</div>
			
			<h1 class="reveal text-[clamp(3.5rem,11vw,12rem)] font-black text-white leading-[0.85] tracking-tighter mb-16 text-glow">
				ENGINEERING <br /> 
				<span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-500 via-indigo-400 to-slate-600">
					INTELLIGENT
				</span> <br /> 
				COMMERCE.
			</h1>

			<div class="grid md:grid-cols-2 gap-12 items-end">
				<p class="reveal text-xl md:text-2xl text-slate-400 leading-relaxed font-light max-w-xl">
					NeuroDev AI architecturally optimizes **Magento 2** ecosystems and integrates custom **Neural Networks** to automate high-velocity digital growth.
				</p>
				<div class="reveal flex gap-4">
					<a href="mailto:contact@neurodevai.com" class="px-10 py-5 bg-blue-600 text-white font-bold rounded-2xl hover:bg-blue-500 transition-all flex items-center gap-3 group shadow-lg shadow-blue-900/20">
						Start Project 
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
					</a>
					<a href="#services" class="px-10 py-5 bg-white/5 border border-white/10 text-white font-bold rounded-2xl hover:bg-white/10 transition-all">Our Stack</a>
				</div>
			</div>
		</header>

		<!-- Bento Grid Services -->
		<section id="services" class="max-w-7xl mx-auto px-6 py-32">
			<div class="grid grid-cols-1 md:grid-cols-12 gap-6">
				
				<!-- Magento Specialist -->
				<div class="reveal md:col-span-8 group relative overflow-hidden bg-white/[0.03] border border-white/10 rounded-[2.5rem] p-12 hover:border-blue-500/40 transition-all duration-500">
					<div class="flex justify-between items-start mb-20">
						<div class="p-4 bg-blue-600/10 rounded-2xl border border-blue-600/20">
							<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#2563eb" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"></path><line x1="3" y1="6" x2="21" y2="6"></line><path d="M16 10a4 4 0 0 1-8 0"></path></svg>
						</div>
						<span class="text-[10px] font-mono text-slate-600 tracking-widest">01 / E-COMMERCE</span>
					</div>
					<h3 class="text-5xl font-bold text-white mb-6 tracking-tight">Magento 2 Engineering</h3>
					<p class="text-lg text-slate-400 max-w-md leading-relaxed mb-8">
						We solve the complex 1% of Magento problems. From enterprise migrations to sub-second checkout optimizations.
					</p>
					<div class="flex flex-wrap gap-2 mt-auto">
						{['PWA Studio', 'Performance Architecture', 'Headless'].map(tag => (
							<span class="px-3 py-1 bg-white/5 border border-white/5 rounded-full text-[9px] font-bold uppercase tracking-widest text-slate-500">{tag}</span>
						))}
					</div>
				</div>

				<!-- AI Integration -->
				<div class="reveal md:col-span-4 bg-gradient-to-br from-blue-600 to-indigo-700 rounded-[2.5rem] p-12 flex flex-col text-white shadow-2xl shadow-blue-900/30">
					<div class="mb-12">
						<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg>
					</div>
					<h3 class="text-3xl font-bold mb-4">Neural Logic Integration</h3>
					<p class="text-blue-100/80 leading-relaxed mb-8">Custom AI agents that automate customer flows and complex business logic.</p>
					<div class="mt-auto pt-8 border-t border-white/20">
						<div class="flex -space-x-2">
							{[1,2,3].map(() => (
								<div class="w-8 h-8 rounded-full bg-white/20 border border-white/30 flex items-center justify-center">
									<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
								</div>
							))}
						</div>
					</div>
				</div>

				<!-- Technical SEO -->
				<div class="reveal md:col-span-4 bg-white/[0.03] border border-white/10 rounded-[2.5rem] p-12 hover:border-white/20 transition-all group">
					<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-slate-500 group-hover:text-blue-500 transition-colors mb-6"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
					<h3 class="text-2xl font-bold text-white mb-4">Technical SEO</h3>
					<p class="text-slate-500 text-sm leading-relaxed">
						Data-led ranking dominance. We optimize the core site architecture, not just the keywords.
					</p>
				</div>

				<!-- Visualizer -->
				<div class="reveal md:col-span-8 bg-[#0a0a0a] border border-white/10 rounded-[2.5rem] p-8 font-mono text-sm overflow-hidden relative neural-grid min-h-[320px]">
					<div class="flex gap-2 mb-6">
						<div class="w-3 h-3 rounded-full bg-red-500/50"></div>
						<div class="w-3 h-3 rounded-full bg-yellow-500/50"></div>
						<div class="w-3 h-3 rounded-full bg-green-500/50"></div>
					</div>
					<div class="space-y-2 text-blue-400 code-scroller max-h-[220px] overflow-hidden">
						<p class="flex gap-2"><span class="text-slate-600">neurodev:</span> <span class="text-white">~ $</span> git init</p>
						<p class="flex gap-2"><span class="text-slate-600">neurodev:</span> <span class="text-white">~ $</span> analyze --target magento-store</p>
						<p class="text-slate-500 leading-none px-2">[SYSTEM] Checking Varnish Cache...</p>
						<p class="text-slate-500 leading-none px-2">[SYSTEM] Testing Redis throughput...</p>
						<p class="text-slate-500 leading-none px-2">[SYSTEM] Auditing Third-Party JS...</p>
						<p class="text-slate-500 leading-none px-2 mt-2">Scanning Core Vitals...</p>
						<p class="text-green-500 leading-none">[OK] LCP: 0.8s</p>
						<p class="text-green-500 leading-none">[OK] FID: 12ms</p>
						<p class="text-green-500 leading-none">[OK] CLS: 0.01</p>
						<p class="flex gap-2 mt-4"><span class="text-slate-600">neurodev:</span> <span class="text-white">~ $</span> deploy --to neural-network</p>
						<p class="text-blue-200 animate-pulse font-bold underline decoration-blue-500 underline-offset-4">OPTIMIZATION COMPLETE: 100/100 Mobile Score</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Methodology -->
		<section id="methodology" class="py-32 px-6 bg-white/[0.01] border-y border-white/5 relative overflow-hidden">
			<div class="max-w-7xl mx-auto">
				<div class="flex flex-col md:flex-row gap-20 items-center">
					<div class="reveal flex-1">
						<h2 class="text-6xl font-black text-white tracking-tighter mb-12 uppercase leading-none">
							THE LOGIC <br /> <span class="text-slate-600 italic font-light">PROCESS.</span>
						</h2>
						<div class="space-y-12">
							{[
								{ title: "Archetype Analysis", desc: "We deconstruct your current tech debt and business constraints." },
								{ title: "Neural Layering", desc: "Injecting automated logic triggers across your sales funnel." },
								{ title: "Production Scaling", desc: "Hardening the architecture for multi-million dollar throughput." }
							].map((step, idx) => (
								<div class="flex gap-6 items-start">
									<span class="text-blue-500 font-black text-xl">0{idx + 1}</span>
									<div>
										<h4 class="text-white font-bold text-lg mb-2">{step.title}</h4>
										<p class="text-slate-500 text-sm leading-relaxed">{step.desc}</p>
									</div>
								</div>
							))}
						</div>
					</div>
					<div class="reveal flex-1 relative">
						<div class="aspect-square bg-blue-600/10 rounded-full flex items-center justify-center p-12 border border-blue-500/20">
							<div class="w-full h-full border border-white/10 rounded-full p-12 animate-[spin_60s_linear_infinite] relative">
								<div class="w-4 h-4 bg-blue-500 rounded-full absolute -top-2 left-1/2 shadow-[0_0_20px_#3b82f6]"></div>
							</div>
							<div class="absolute inset-0 flex items-center justify-center">
								<svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white opacity-20"><polyline points="4 17 10 11 4 5"></polyline><line x1="12" y1="19" x2="20" y2="19"></line></svg>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Arsenal -->
		<section id="arsenal" class="py-32 px-6">
			<div class="max-w-7xl mx-auto">
				<div class="reveal text-center mb-20">
					<h2 class="text-5xl font-black text-white tracking-tighter mb-4 uppercase">Technical Arsenal</h2>
					<p class="text-slate-500 uppercase tracking-widest text-[10px] font-bold">Hardware & Software Integration</p>
				</div>
				<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
					{arsenal.map(tech => (
						<div class="reveal p-8 border border-white/5 bg-white/[0.02] rounded-3xl hover:bg-blue-600/10 hover:border-blue-500/30 transition-all group cursor-default">
							<p class="text-white font-bold text-sm mb-1">{tech.label}</p>
							<p class="text-slate-600 text-[9px] uppercase tracking-widest font-bold">{tech.category}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Results -->
		<section id="results" class="py-32 px-6 bg-blue-600/5">
			<div class="max-w-7xl mx-auto">
				<div class="reveal grid md:grid-cols-2 gap-20 items-end mb-20">
					<div>
						<h2 class="text-6xl font-black text-white tracking-tighter uppercase leading-none mb-6">Success <br/> Metrics.</h2>
						<p class="text-slate-400 text-lg">Measurable intelligence delivered across the e-commerce spectrum.</p>
					</div>
					<div class="flex gap-12">
						{[
							{ val: "99.8", unit: "%", label: "Lighthouse Score" },
							{ val: "45", unit: "%", label: "AOV Increase" },
							{ val: "24/7", unit: "", label: "AI Support" }
						].map(m => (
							<div class="text-center">
								<p class="text-4xl font-black text-blue-500">{m.val}<span class="text-sm">{m.unit}</span></p>
								<p class="text-[10px] font-bold uppercase tracking-widest text-slate-500">{m.label}</p>
							</div>
						))}
					</div>
				</div>

				<div class="grid md:grid-cols-2 gap-6">
					{[
						{ id: "01", title: "The Global Luxe Replatform", desc: "Transitioning a $20M AOV brand from Legacy M1 to a Headless Neural-Search architecture.", color: "blue-900/20" },
						{ id: "02", title: "AI Concierge Integration", desc: "Custom LLM deployment resulting in 30% reduction in support overhead and 12% sales lift.", color: "indigo-900/20" }
					].map(caseStudy => (
						<div class="reveal group relative h-[450px] rounded-[3rem] overflow-hidden border border-white/10">
							<div class="absolute inset-0 bg-gradient-to-t from-black via-black/60 to-transparent z-10"></div>
							<div class={`absolute inset-0 bg-${caseStudy.color} group-hover:scale-110 transition-transform duration-1000`} />
							<div class="absolute bottom-0 p-12 z-20">
								<p class="text-blue-500 font-mono text-[10px] mb-2 uppercase tracking-[0.3em]">Case Study {caseStudy.id}</p>
								<h4 class="text-3xl font-bold text-white mb-4">{caseStudy.title}</h4>
								<p class="text-slate-400 text-sm mb-6 max-w-sm">{caseStudy.desc}</p>
								<span class="flex items-center gap-2 text-white font-bold text-xs uppercase tracking-widest group/btn cursor-pointer">
									View Logic <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover/btn:translate-x-1 transition-transform"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
								</span>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- FAQ -->
		<section class="py-32 px-6">
			<div class="max-w-3xl mx-auto">
				<div class="reveal text-center mb-20">
					<h2 class="text-5xl font-black text-white tracking-tighter mb-4 uppercase">Neural Debugging</h2>
					<p class="text-slate-500 uppercase tracking-widest text-[10px] font-bold">Frequently Queried Parameters</p>
				</div>
				<div class="space-y-4">
					{faqData.map(faq => (
						<details class="reveal group border border-white/5 bg-white/[0.01] rounded-3xl overflow-hidden transition-all">
							<summary class="w-full p-8 flex justify-between items-center text-left hover:bg-white/[0.02] cursor-pointer list-none">
								<span class="text-white font-bold">{faq.q}</span>
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#2563eb" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-open:rotate-180 transition-transform"><polyline points="6 9 12 15 18 9"></polyline></svg>
							</summary>
							<div class="p-8 pt-0 text-slate-500 text-sm leading-relaxed border-t border-white/5">
								{faq.a}
							</div>
						</details>
					))}
				</div>
			</div>
		</section>

		<!-- Footer -->
		<footer class="py-20 border-t border-white/5 px-6">
			<div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-8">
				<div class="reveal text-sm text-slate-600 font-bold uppercase tracking-widest">
					&copy; 2025 NeuroDev AI â€¢ Engineered in Long Beach
				</div>
				<div class="flex gap-12 text-[10px] font-bold uppercase tracking-[0.4em] text-slate-500">
					<a href="#" class="hover:text-blue-500">Privacy</a>
					<a href="#" class="hover:text-blue-500">Terms</a>
					<a href="https://github.com/FreddyKrugerCODE" class="hover:text-blue-500">Github</a>
				</div>
			</div>
		</footer>

		<script>
			// Cinematic Reveal Logic
			const observerOptions = {
				threshold: 0.1
			};

			const observer = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						entry.target.classList.add('active');
					}
				});
			}, observerOptions);

			document.querySelectorAll('.reveal').forEach(el => observer.observe(el));

			// Navbar Scroll Effect
			window.addEventListener('scroll', () => {
				const nav = document.getElementById('navbar');
				if (nav) {
					if (window.scrollY > 50) {
						nav.classList.add('glass', 'py-4');
						nav.classList.remove('py-8', 'border-transparent');
						nav.classList.add('border-white/10');
					} else {
						nav.classList.remove('glass', 'py-4', 'border-white/10');
						nav.classList.add('py-8', 'border-transparent');
					}
				}
			});
		</script>
	</body>
</html>