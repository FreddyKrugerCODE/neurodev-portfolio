---
// NeuroDev AI - AI & Neural Logic Silo
// Engineered for Search Dominance and Technical Authority
import Layout from '../layouts/Layout.astro';

const capabilities = [
  {
    title: "Neural Middleware",
    desc: "We architect custom bridge-logic between your Magento backend and LLMs, ensuring secure, low-latency data flow for real-time automation.",
    icon: "cpu"
  },
  {
    title: "Autonomous Agents",
    desc: "Deployment of task-specific AI agents designed to handle complex customer queries, inventory mapping, and automated procurement logic.",
    icon: "bot"
  },
  {
    title: "Semantic Discovery",
    desc: "Replacing traditional keyword search with vector-based neural search, increasing conversion rates by understanding true user intent.",
    icon: "search"
  },
  {
    title: "Predictive Ops",
    desc: "Machine Learning models that forecast stock requirements and peak-load scenarios based on historical neural data patterns.",
    icon: "trending-up"
  }
];

const aiStack = [
  { label: "Python / FastAPI", category: "Engine" },
  { label: "PyTorch / TensorFlow", category: "Models" },
  { label: "LangChain", category: "Orchestration" },
  { label: "Pinecone / Weaviate", category: "Vector DB" },
  { label: "OpenAI / Anthropic", category: "LLM APIs" },
  { label: "HuggingFace", category: "Open Source" },
  { label: "Redis / Celery", category: "Task Queue" },
  { label: "Docker / Kubernetes", category: "Scaling" }
];

// Page-Specific Schema: AI Service Offering
const aiServiceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "AI Integration & Neural Engineering",
  "provider": {
    "@type": "ProfessionalService",
    "name": "NeuroDev AI"
  },
  "areaServed": "Global",
  "description": "Enterprise AI agent integration, LLM middleware development, and neural search optimization for high-scale e-commerce ecosystems."
};
---

<Layout 
  title="AI Integration & Neural Engineering | Autonomous Agents for E-commerce" 
  description="Enterprise AI agent integration, LLM middleware development, and neural search optimization for high-scale e-commerce ecosystems."
  additionalSchema={aiServiceSchema}
>
	<!-- Hero Section -->
	<header class="pt-48 pb-32 px-6 max-w-7xl mx-auto">
		<div class="reveal inline-block px-3 py-1 mb-8 text-[10px] font-bold tracking-[0.2em] text-blue-500 uppercase bg-blue-500/10 border border-blue-500/20 rounded-full">
			Engineering Specialty: Neural Automation
		</div>
		<h1 class="reveal text-5xl md:text-8xl font-black text-white leading-[0.9] mb-12 tracking-tighter">
			NEURAL LOGIC <br/> <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-400">INTEGRATED</span> <br/> FOR SCALE.
		</h1>
		<p class="reveal text-xl md:text-2xl text-slate-300 max-w-2xl leading-relaxed font-medium">
			We don't just use AI tools. We architect <span class="text-white">autonomous logic layers</span> that optimize enterprise throughput and automate high-value decision nodes.
		</p>
	</header>

	<!-- Capabilities Grid -->
	<section class="py-32 px-6 bg-white/[0.01] border-y border-white/5">
		<div class="max-w-7xl mx-auto">
			<div class="grid md:grid-cols-2 gap-12">
				{capabilities.map((c) => (
					<div class="reveal glass p-12 rounded-[2.5rem] hover:border-blue-500/30 transition-all group">
						<h2 class="text-3xl font-bold text-white mb-6 uppercase tracking-tight">{c.title}</h2>
						<p class="text-slate-300 leading-relaxed text-lg">{c.desc}</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- AI Arsenal Section -->
	<section class="py-32 px-6 max-w-7xl mx-auto">
		<div class="text-center mb-20">
			<h2 class="reveal text-4xl md:text-6xl font-black text-white uppercase tracking-tighter mb-4">Neural <span class="text-blue-500">Arsenal.</span></h2>
			<p class="reveal text-slate-400 font-bold uppercase tracking-widest text-[10px]">The technology stack behind our intelligence layers</p>
		</div>
		<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
			{aiStack.map(tech => (
				<div class="reveal p-8 border border-white/5 bg-white/[0.02] rounded-3xl hover:bg-blue-600/10 hover:border-blue-500/30 transition-all group cursor-default">
					<p class="text-white font-bold text-sm mb-1">{tech.label}</p>
					<p class="text-slate-400 text-[9px] uppercase tracking-widest font-bold">{tech.category}</p>
				</div>
			))}
		</div>
	</section>

	<!-- Final CTA -->
	<section class="py-40 px-6 text-center border-t border-white/5 bg-gradient-to-b from-blue-900/5 to-transparent">
		<div class="max-w-4xl mx-auto flex flex-col items-center">
			<h2 class="reveal text-6xl md:text-9xl font-black text-white tracking-tighter mb-12 uppercase leading-none">Automate <br/> <span class="text-blue-500">Everything.</span></h2>
			<p class="reveal text-slate-300 text-xl mb-12">Ready to inject neural logic into your e-commerce architecture?</p>
			
			<a href="/contact" class="reveal px-10 py-5 bg-blue-600 text-white font-bold rounded-2xl hover:bg-blue-500 transition-all flex items-center gap-3 group shadow-lg shadow-blue-900/20 uppercase tracking-widest text-sm" aria-label="Navigate to contact form for AI integration consultation">
				Initialize AI Audit
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform" aria-hidden="true"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
			</a>
		</div>
	</section>
</Layout>
