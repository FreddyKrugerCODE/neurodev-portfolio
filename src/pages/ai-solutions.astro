---
// NeuroDev AI - AI & Neural Logic Silo
// Engineered for Search Dominance and Technical Authority

const capabilities = [
  {
    title: "Neural Middleware",
    desc: "We architect custom bridge-logic between your Magento backend and LLMs, ensuring secure, low-latency data flow for real-time automation.",
    icon: "cpu"
  },
  {
    title: "Autonomous Agents",
    desc: "Deployment of task-specific AI agents designed to handle complex customer queries, inventory mapping, and automated procurement logic.",
    icon: "bot"
  },
  {
    title: "Semantic Discovery",
    desc: "Replacing traditional keyword search with vector-based neural search, increasing conversion rates by understanding true user intent.",
    icon: "search"
  },
  {
    title: "Predictive Ops",
    desc: "Machine Learning models that forecast stock requirements and peak-load scenarios based on historical neural data patterns.",
    icon: "trending-up"
  }
];

const aiStack = [
  { label: "Python / FastAPI", category: "Engine" },
  { label: "PyTorch / TensorFlow", category: "Models" },
  { label: "LangChain", category: "Orchestration" },
  { label: "Pinecone / Weaviate", category: "Vector DB" },
  { label: "OpenAI / Anthropic", category: "LLM APIs" },
  { label: "HuggingFace", category: "Open Source" },
  { label: "Redis / Celery", category: "Task Queue" },
  { label: "Docker / Kubernetes", category: "Scaling" }
];

const schemaData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "AI Integration & Neural Engineering",
  "provider": {
    "@type": "ProfessionalService",
    "name": "NeuroDev AI"
  },
  "areaServed": "Global",
  "description": "Enterprise AI agent integration, LLM middleware development, and neural search optimization for high-scale e-commerce ecosystems."
};
---

<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SENIOR SEO: Primary Meta Tags -->
		<title>AI Logic & Neural Integration | Enterprise Automation Specialist</title>
		<meta name="title" content="AI Logic & Neural Integration | Enterprise Automation Specialist" />
		<meta name="description" content="Transform your e-commerce operations with custom AI agents and neural networks. Specialized in LLM middleware, automated workflows, and intelligent customer engagement." />
		<link rel="canonical" href="https://neurodevai.com/ai-solutions" />
		<meta name="robots" content="index, follow" />

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://neurodevai.com/ai-solutions" />
		<meta property="og:title" content="AI Logic & Neural Engineering | NeuroDev AI" />
		<meta property="og:description" content="We build the neural tissue that connects enterprise data to automated intelligence." />
		<meta property="og:image" content="https://neurodevai.com/og-ai.jpg" />

		<!-- Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify(schemaData)} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

		<style>
			@import "tailwindcss";
			@theme { --color-brand-bg: #020202; --color-brand-blue: #2563eb; }
			:root { color-scheme: dark; }
			body { font-family: 'Plus Jakarta Sans', sans-serif; background-color: #020202; letter-spacing: -0.01em; }
			.glass { background: rgba(15, 15, 15, 0.6); backdrop-filter: blur(20px); border: 1px solid rgba(255, 255, 255, 0.05); }
			.reveal { opacity: 0; transform: translateY(20px); transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1); }
			.reveal.active { opacity: 1; transform: translateY(0); }
			h1, h2, h3, .font-black { letter-spacing: -0.04em; text-wrap: balance; }
      .ai-gradient { background: linear-gradient(135deg, rgba(37, 99, 235, 0.1) 0%, rgba(99, 102, 241, 0.1) 100%); }
		</style>
	</head>
	<body class="text-slate-300 selection:bg-blue-600/30 overflow-x-hidden">
		
		<!-- Background Orbs -->
		<div class="fixed inset-0 -z-10 pointer-events-none">
			<div class="absolute top-[-10%] right-[-10%] w-[50%] h-[50%] bg-indigo-900/20 blur-[150px] rounded-full animate-pulse"></div>
			<div class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] bg-blue-900/10 blur-[150px] rounded-full"></div>
		</div>

		<!-- Navigation -->
		<nav class="fixed top-0 w-full z-50 glass py-6 border-b border-white/5">
			<div class="max-w-7xl mx-auto px-6 flex justify-between items-center">
				<a href="/" class="flex items-center gap-2 group cursor-pointer" aria-label="NeuroDev AI Homepage">
					<div class="w-8 h-8 bg-blue-600 rounded flex items-center justify-center group-hover:rotate-12 transition-transform">
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg>
					</div>
					<span class="text-xl font-black text-white tracking-tighter uppercase">Neuro<span class="text-blue-500">Dev</span></span>
				</a>
				<div class="hidden md:flex gap-10 items-center">
					<a href="/" class="text-[11px] font-bold uppercase tracking-[0.3em] text-slate-400 hover:text-white transition-colors">Return Home</a>
          <!-- Standardized Nav Button -->
					<a href="/#contact" class="px-8 py-3 bg-blue-600 text-white font-bold rounded-2xl hover:bg-blue-500 transition-all flex items-center gap-2 group shadow-lg shadow-blue-900/20 text-[11px] uppercase tracking-widest">
            Initialize
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
          </a>
				</div>
			</div>
		</nav>

		<!-- Hero Section -->
		<header class="pt-48 pb-32 px-6 max-w-7xl mx-auto">
			<div class="reveal inline-block px-3 py-1 mb-8 text-[10px] font-bold tracking-[0.2em] text-blue-500 uppercase bg-blue-500/10 border border-blue-500/20 rounded-full">
				Engineering Specialty: Neural Automation
			</div>
			<h1 class="reveal text-5xl md:text-8xl font-black text-white leading-[0.9] mb-12 tracking-tighter">
				NEURAL LOGIC <br/> <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-400">INTEGRATED</span> <br/> FOR SCALE.
			</h1>
			<p class="reveal text-xl md:text-2xl text-slate-400 max-w-2xl leading-relaxed font-medium">
				We don't just use AI tools. We architect <span class="text-white">autonomous logic layers</span> that optimize enterprise throughput and automate high-value decision nodes.
			</p>
		</header>

		<!-- Capabilities Grid -->
		<section class="py-32 px-6 bg-white/[0.01] border-y border-white/5">
			<div class="max-w-7xl mx-auto">
				<div class="grid md:grid-cols-2 gap-12">
					{capabilities.map((c) => (
						<div class="reveal glass p-12 rounded-[2.5rem] hover:border-blue-500/30 transition-all group">
							<h3 class="text-3xl font-bold text-white mb-6 uppercase tracking-tight">{c.title}</h3>
							<p class="text-slate-400 leading-relaxed text-lg">{c.desc}</p>
						</div>
					))}
				</div>
			</div>
		</section>

    <!-- AI Arsenal Section -->
    <section class="py-32 px-6 max-w-7xl mx-auto">
      <div class="text-center mb-20">
        <h2 class="reveal text-4xl md:text-6xl font-black text-white uppercase tracking-tighter mb-4">Neural <span class="text-blue-500">Arsenal.</span></h2>
        <p class="reveal text-slate-500 font-bold uppercase tracking-widest text-[10px]">The technology stack behind our intelligence layers</p>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {aiStack.map(tech => (
          <div class="reveal p-8 border border-white/5 bg-white/[0.02] rounded-3xl hover:bg-blue-600/10 hover:border-blue-500/30 transition-all group cursor-default">
            <p class="text-white font-bold text-sm mb-1">{tech.label}</p>
            <p class="text-slate-600 text-[9px] uppercase tracking-widest font-bold">{tech.category}</p>
          </div>
        ))}
      </div>
    </section>

		<!-- Final CTA -->
		<section class="py-40 px-6 text-center border-t border-white/5 ai-gradient">
			<div class="max-w-4xl mx-auto flex flex-col items-center">
				<h2 class="reveal text-6xl md:text-9xl font-black text-white tracking-tighter mb-12 uppercase leading-none">Automate <br/> <span class="text-blue-500">Everything.</span></h2>
				<p class="reveal text-slate-400 text-xl mb-12">Ready to inject neural logic into your e-commerce architecture?</p>
        
        <!-- Standardized Primary CTA Button -->
				<a href="/#contact" class="reveal px-10 py-5 bg-blue-600 text-white font-bold rounded-2xl hover:bg-blue-500 transition-all flex items-center gap-3 group shadow-lg shadow-blue-900/20 uppercase tracking-widest text-sm">
					Initialize AI Audit
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
				</a>
			</div>
		</section>

		<footer class="py-20 border-t border-white/5 text-center text-[10px] text-slate-600 font-bold uppercase tracking-[0.4em]">
			&copy; 2025 NeuroDev AI â€¢ Neural Engineering Operations
		</footer>

		<script>
			const observer = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) entry.target.classList.add('active');
				});
			}, { threshold: 0.1 });
			document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
		</script>
	</body>
</html>